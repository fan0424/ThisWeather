<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="42sp"
                android:id="@+id/tv_weiget_time"
                android:textColor="@color/colorWrite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="42sp"
                android:id="@+id/tv_weiget_showtype"
                android:textColor="@color/colorWrite"
                />

            <!--<ImageView-->
                <!--android:layout_width="48dp"-->
                <!--android:layout_height="48dp"-->
                <!--android:src="@drawable/icon_yun_write"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:layout_marginRight="6dp"-->
                <!--android:id="@+id/iv_weiget_showtype"-->
                <!--/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_marginLeft="6dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/tv_weiget_date"
                android:text=""
                android:textColor="@color/colorWrite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晴"
                android:id="@+id/tv_weiget_type"
                android:textColor="@color/colorWrite"
                />

            <TextView
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11°C~22°C"
                android:id="@+id/tv_weiget_degrees"
                android:textColor="@color/colorWrite"
                />

        </LinearLayout>

</LinearLayout>